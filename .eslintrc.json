{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"plugins": [ "jsdoc", "jest" ],
	"extends": [
		"eslint:recommended",
		"plugin:jsdoc/recommended",
		"plugin:jest/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-fallthrough": "off",
		"no-console": "off",
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			"error",
			"always"
		],

		"jest/no-disabled-tests": "warn"
	}
}
